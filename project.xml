<?xml version='1.0' encoding='ISO-8859-1'?>
<project>
    <pomVersion>3</pomVersion>
    <id>atlassian-jira-mercurial-plugin</id>
    <name>JIRA Mercurial plugin</name>
    <currentVersion>0.3.7.0.6</currentVersion>
    <organization>
        <name>XenSource, Inc</name>
    </organization>
    <inceptionYear>2006</inceptionYear>
    <package>com.xensource.jira.plugin.ext.mercurial</package>
    <description>A plugin to integrate JIRA with Mercurial.</description>

    <developers>
        <developer>
            <name>Matthew Doar</name>
            <id>mdoar</id>
            <email>matt@xensource.com</email>
            <organization>XenSource</organization>
            <roles>
                <role>Toolsmith</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <id>atlassian-jira</id>
            <version>${build.jira.version}</version>
        </dependency>
        <dependency>
            <id>atlassian-plugins</id>
            <version>0.3.17</version>
        </dependency>
        <dependency>
            <id>atlassian-core</id>
            <version>2.4.9</version>
        </dependency>
        <dependency>
            <id>atlassian-configurableobjects</id>
            <version>0.4.21</version>
        </dependency>
        <dependency>
            <id>atlassian-ofbiz</id>
            <version>0.3.6</version>
        </dependency>
        <dependency>
            <id>osuser</id>
            <version>1.0-dev-log4j-1.4jdk-7Dec05</version>
        </dependency>
        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
        </dependency>
        <dependency>
            <id>commons-collections</id>
            <version>3.1</version>
        </dependency>
        <dependency>
            <id>ofbcore+share</id>
            <version>2.1.1</version>
        </dependency>
        <dependency>
            <id>ofbcore+entity</id>
            <version>2.1.1-atlassian-20Dec05</version>
        </dependency>
        <dependency>
            <id>ofbcore+service</id>
            <version>2.1.1</version>
        </dependency>
        <dependency>
            <id>ofbcore+extutil</id>
            <version>2.1.1</version>
        </dependency>
        <dependency>
            <id>webwork</id>
            <version>1.4</version>
        </dependency>
        <dependency>
            <id>junit</id>
            <version>3.8.1</version>
        </dependency>
        <dependency>
            <id>jmock</id>
            <version>1.0.1</version>
        </dependency>
        <dependency>
            <id>lucene</id>
            <version>1.4.3</version>
        </dependency>
        <dependency>
            <id>osworkflow</id>
            <version>17Aug2004</version>
        </dependency>
        <dependency>
            <id>propertyset</id>
            <version>1.3</version>
        </dependency>
        <dependency>
            <id>picocontainer</id>
            <version>1.0</version>
        </dependency>
        <dependency>
            <id>oscore</id>
            <version>2.2.6-dev-9Nov05</version>
        </dependency>
        <dependency>
            <id>commons-lang</id>
            <version>2.0</version>
        </dependency>

          <!-- Transitive dependencies from JIRA
          <dependency>
            <id>servletapi</id>
            <version>2.3</version>
          </dependency>
        </dependencies>
        <dependency>
          <id>dom4j</id>
          <version>1.4</version>
          <properties>
            <war.bundle>true</war.bundle>
          </properties>
        </dependency>
        -->
      </dependencies>

    <reports>
        <report>maven-pmd-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-clover-plugin</report>
    </reports>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>${basedir}/src/etc</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <excludes>
                    <exclude>mercurial-jira-plugin.properties</exclude>
                </excludes>
            </resource>
        </resources>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
                <include>**/Test*.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>src/test/etc</directory>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>

<atlassian-plugin key="com.xensource.jira.plugin.ext.mercurial" name="Mercurial Plugin">

    <plugin-info>
        <description>JIRA Mercurial Plugin</description>
        <version>0.3.7.0.7</version>
        <application-version min="3.7" max="3.7"/>
        <vendor name="XenSource, Inc" url="http://www.xensource.com"/>
    </plugin-info>

    <resource type="i18n" name="MercurialActionSupport"
              location="com.xensource.jira.plugin.ext.mercurial.action.MercurialActionSupport" />

    <issue-tabpanel key="mercurial-commits-tabpanel" name="Mercurial Changes Tab Panel" class="com.xensource.jira.plugin.ext.mercurial.issuetabpanels.changes.MercurialRevisionsTabPanel">
        <resource type="i18n" name="i18n" location="templates.plugins.mercurial.issuetabpanels.mercurial_jira_plugin"/>
        <description>Show Mercurial commits related to an issue in an issue tab panel.</description>
        <label>Mercurial Commits</label>
        <resource type="velocity" name="view" location="templates/plugins/mercurial/issuetabpanels/mercurial-commits-view.vm"/>
    </issue-tabpanel>

    <component key="mercurialManager" name="mercurial Manager" class="com.xensource.jira.plugin.ext.mercurial.MercurialRepositoryManagerImpl">
        <interface>com.xensource.jira.plugin.ext.mercurial.MercurialRepositoryManager</interface>
    </component>

    <webwork1 key="MercurialRepositoriesManagement" name="Mercurial repositories management" class="java.lang.Object">
        <actions>
            <action name="com.atlassian.jira.plugin.ext.mercurial.action.ViewMercurialRepositoriesAction" alias="ViewMercurialRepositories">
                <view name="success">/templates/plugins/mercurial/configuration/list.vm</view>
            </action>
            <action name="com.atlassian.jira.plugin.ext.mercurial.action.AddMercurialRepositoryAction" alias="AddMercurialRepository">
                <view name="input">/templates/plugins/mercurial/configuration/add.vm</view>
                <view name="error">/templates/plugins/mercurial/configuration/add.vm</view>
                <view name="permissionviolation">/templates/plugins/mercurial/configuration/no-privilege.vm</view>
            </action>
            <action name="com.atlassian.jira.plugin.ext.mercurial.action.UpdateMercurialRepositoryAction" alias="UpdateMercurialRepository">
                <view name="input">/templates/plugins/mercurial/configuration/edit.vm</view>
                <view name="permissionviolation">/templates/plugins/mercurial/configuration/no-privilege.vm</view>
                <view name="error">/templates/plugins/mercurial/configuration/edit.vm</view>
            </action>
            <action name="com.atlassian.jira.plugin.ext.mercurial.action.DeleteMercurialRepositoryAction" alias="DeleteMercurialRepository">
				<view name="input">/templates/plugins/mercurial/configuration/delete.vm</view>
                <view name="permissionviolation">/templates/plugins/mercurial/configuration/no-privilege.vm</view>
				<view name="error">/templates/plugins/mercurial/configuration/delete.vm</view>
            </action>
            <action name="com.atlassian.jira.plugin.ext.mercurial.action.ActivateMercurialRepositoryAction" alias="ActivateMercurialRepository">
                <view name="permissionviolation">/templates/plugins/mercurial/configuration/no-privilege.vm</view>
                <view name="success">/templates/plugins/mercurial/configuration/activate.vm</view>
            </action>
        </actions>
    </webwork1>
    
</atlassian-plugin>
